{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm ci && npm run build",
        "distDir": "dist"
      }
    },
    {
      "src": "dist/main.js",
      "use": "@vercel/node",
      "config": {
        "helpers": false,
        "shouldAddHelpers": false
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "dist/main.js" }
  ]
}
